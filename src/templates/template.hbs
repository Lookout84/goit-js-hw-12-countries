{{#each this}}
<h2 class="countries-name">{{name}}</h2>
<p>Capital: {{capital}}</p>
<p>Population: {{population}}</p>
<ul class="list">
  <p>Languages:</p>
  {{#each languages}}
  <li>{{this.name}}</li>
  {{/each}}
</ul>
<div class="flag-img">
  <img src={{flag}} alt={{name}} width="200">
</div>
{{/each}}


